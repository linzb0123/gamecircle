/* pages/longpost/longpost.wxss */
page{
  background-color: #4DAC96;
}

.container{
  width: 100%;
  height: 100%;
  position: absolute;
  flex-direction: column;
  display: flex;
}

.selection{
  position: absolute;
  top: 20rpx;
  width: 90%;
  height: 140rpx;
  left: 5%;
}

.selection1{
  width: 100%;
  height: 100%;
}


.selection2{
  font-size: 5vx;
  font-weight: 300;
  position: relative;
  left: 0;
  top: -175rpx;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 85%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}



.touxiang{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  background-color: #ffff;
}

.single_note{
   position: absolute;
  top: 110rpx;
  width: 90%;
  background-color: white;
  margin-bottom:50rpx;
  padding-bottom:50rpx;
  min-height:1000rpx;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  left: 5%;
}

.single{
  position: relative;
  top: 30rpx;
  display: flex;
  flex-direction: row;
  width: 98%;

  background-color: #eceee9;
  border-bottom-left-radius: 50rpx;
  border-top-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  /* border: 9rpx solid #eceee9; */
  /* border-radius: 10%; */
  margin-left:auto;
  margin-right:auto;
  margin-bottom:30rpx;
  margin-top:10rpx;
}

.name_content{
  position: relative;
  left: 150rpx;
  display: flex;
  flex-direction: column;
   color:rgb(77, 77, 77);
}

.name_content .gameType{
  position: absolute;
   right:14rpx;
  top:22rpx;
  font-size: 15px;
}

.photo{
  position: absolute;
  margin-right:5rpx;
  margin-top:10rpx;
  margin-left:20rpx;
}

.note_name{
  font-size: 6vw;
  margin-top:20rpx;
  margin-bottom:15rpx;
}
.note_time{
  font-size: 13px;
  margin-bottom:15rpx;
}

.note_content{
  width: 490rpx;
  font-size: 4vw;
  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3; 
  margin-bottom:30rpx;
}