/* pages/post_details/postDetails.wxss */
.body{
  width:90%;
  height:auto;
  background:white;
  position: absolute;
  top:40rpx;
  border-radius: 70rpx;
  margin-bottom:120rpx;
  padding-bottom:50rpx;
  min-height:1000rpx;
  left: 5%
}
.body .main_post{
  width:100%;
  background-color: rgb(231, 231, 231);
  border-radius: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.body .top-content{
  width:90%;
  /* border:1px solid black; */
  display: flex;
  /* justify-content: center; */
  padding-top:20rpx;
  /* margin-bottom:20rpx; */
  margin-top:10rpx;
  left: 5%
}
.body .bottom-content{
  width:90%;
  /* border:1px solid red; */
  display: flex;
  justify-content: center;
}

.body .top-content .headImg{
  width:140rpx;
  height:140rpx;
  border-radius: 70rpx;
 
}
.body .top-content .userInfo{
  padding-left:20rpx;
  /* border:1rpx solid blue; */
  color:rgb(77, 77, 77);
  font-size:13px;
}
.body .top-content .userInfo .username{
  font-size:18px;
  color:rgb(53, 53, 53);
  padding-top:20rpx;
  padding-bottom:20rpx;
}

.body .bottom-content .message{
  /* border:1rpx solid burlywood; */
  width:70%;
  padding-left:140rpx;
  font-size:15px;
  line-height:20px;
  color:rgb(53, 53, 53);
  padding-bottom:40rpx;
  border-bottom:1rpx solid rgba(0, 0, 0,0.3);
}

.body .post_reply{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.bottomLine{
  border-bottom:1rpx solid #ccc;
}
.reply{
  position:fixed;
  bottom:0;
  width:100%;
  background-color:white;
  border-radius:0;
}
.reply::after{
 border-radius: 0;
}
.inputReply{
  position: fixed;
  bottom:0;
  width:100%;
  min-height: 100rpx;
  background-color:white;
  border-radius:0;
  display: flex;
  justify-content: center;
}
.inputReply::after{
 border-radius: 0;
}
.inputReply .replyMessage{
  width:65%;
  font-size:17px;
  min-height:60rpx;
  height:auto;
  max-height: 1000rpx;
  padding-left:30rpx;
  padding-right:30rpx;
  padding-top:20rpx;
  margin-top:15rpx;
  margin-bottom:15rpx;
  margin-right:20rpx;
  margin-left:20rpx;
  background-color: rgb(240, 239, 239);
  border-radius: 40rpx;
}
.inputReply .makeSure{
  width:auto;
  height: 60rpx;
  padding:auto 10rpx;
  margin:auto 10rpx;
  font-size:16px;
  line-height:60rpx;
  border:none;
}