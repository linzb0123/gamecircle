/* pages/icon/icon.wxss */
.container{
  position: absolute;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
}




.icon{
  width: 250rpx;
  height: 250rpx;

  animation: icon 1.5s ease-out;

  position:relative;
  bottom: 0rpx;
  right: 0rpx;

}

@keyframes icon{   
  /* 50% {transform: rotate(1080deg);bottom: 350rpx;}   */
  20% {transform: rotate(720deg);bottom: -350rpx;}
}

.image{
  width: 100%;
  height: 100%;

}

.words{
  background-color:#4DAC96;
  height: 25%;
  z-index: 1000;
  padding-top: 15rpx;
}

.word{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  animation: myfirst 3s ease-in-out;
}

@keyframes myfirst
{
  0%   {color: #4DAC96;}
  50%  {color: white;}
}



.line{
  height: 7rpx; 
  width: 450rpx;
  background-color: white;
  margin-top: 50rpx;
}

.youxiquan{
  font-size: 50rpx;
}

