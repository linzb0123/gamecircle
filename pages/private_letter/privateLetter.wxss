.messageBox{
  width:260rpx;
  height:114rpx;
  background-color:white;
  font-size:19px;
  color:rgb(150, 150, 150);
  border-radius: 50rpx;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  margin-top:-40rpx;
}
.messageBox label{
  display:inline-block;
  margin-top:45rpx;
}

.body{
  width:92%;
  margin:40rpx auto;
  background-color:white;
  border-radius: 50rpx;
  padding-bottom:50rpx;
  overflow: hidden;
}

.letter{
  width:100%;
  display: flex;
  flex-direction: column;
  position: relative;
}



.letter-top{
  margin-top:20rpx;
  width:94%;
  margin-left:auto;
  margin-right:auto;
  display: flex;
  vertical-align: center;
  margin-bottom: 10rpx;
}

.letter-top .headImg{
  width:150rpx;
  height:150rpx;
  border-radius: 75rpx;
}

.letter-top .info{
  width:75%;
  margin-left:14rpx; 
  font-size:12px;
  color:rgb(109, 109, 109);
}

.info .username{
  font-size:20px;
  color:rgb(59, 59, 59);
}

.info .time{
  float: right;
  height:60rpx;
  line-height:60rpx;
}

.info .message{
  width:100%;
  font-size:15px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top:30rpx;
}

.letter-bottom{
  height:1px;
  width:100%;
  background-color:rgb(136, 136, 136);
}

.notice{
  position: absolute;
  width:30rpx;
  height:30rpx;
  border-radius: 30rpx;
  background-color:rgb(255, 65, 65);
  float:left;
  left:139rpx;
  top:14rpx;
}

.delSize{
  height:100%;
  width:50px;
  color:white;
  padding-top:50rpx;
  text-align: center;
  background-color:rgb(255, 59, 59);
}

.mg-top-10{
  margin-top:10rpx;
}