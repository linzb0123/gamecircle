/* pages/focususers/focususers.wxss */
.box{
  background-color: white;
  width: 700rpx;
  margin-top: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 100%;
  border-radius: 40rpx;
  padding-top: 30rpx;
  box-shadow: black 0rpx 0rpx 1rpx ;
  /* position: relative */
}


.top{
  width: 260rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #4dac96;
  background-color: white;
  border-radius: 0rpx 0rpx 40rpx 40rpx;
  margin-left: 250rpx;
  position: absolute;
  top: 0rpx;
  box-shadow: black 0rpx 1rpx 1rpx;
}
.letter{
  width:100%;
  display: flex;
  flex-direction: column;
  position: relative;
}



.letter-top{
  margin-top:20rpx;
  width:94%;
  margin-left:auto;
  margin-right:auto;
  display: flex;
  vertical-align: center;
  margin-bottom: 10rpx;
}

.letter-top .headImg{
  width:150rpx;
  height:150rpx;
  border-radius: 50%;
}

.letter-top .info{
  width:65%;
  margin-left:14rpx;
  font-size:12px;
  color:rgb(109, 109, 109);
}

.info .username{
  font-size:20px;
  color:rgb(59, 59, 59);
}

.info .signature{
  width:100%;
  font-size:16px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top:30rpx;
}

.letter-bottom{
  height:1px;
  width:100%;
  background-color:rgb(136, 136, 136);
}

.delSize{
  height:100%;
  line-height: 100%;
  width:50px;
  color:white;
  padding-top:50rpx;
  text-align: center;
  background-color:rgb(255, 59, 59);
}

.mg-top-10{
  margin-top:10rpx;
}
.bottom{
  width: 100%;
  height: 25rpx;
}