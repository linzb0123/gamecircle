.game .rectangle{
  position: absolute;
  top: 0rpx;
  /* background-color: #4dac96; */
  width: 240rpx;
  height: 95%;
}
.back{
  width: 100%;
  height: 100%;
}
.rectangle .circle{
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  position: absolute;
  left: 10rpx;
  top:130rpx;
  border: 0rpx;
}
.circle .pacture{
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  display:block;
  overflow:hidden;
  position: absolute;
  left: 0rpx;
}
.bottom{
  position: absolute;
  bottom: 0rpx;
  left: 95rpx;
  width: 560rpx;
  /* border: 1rpx solid black; */
  height: 100rpx;
}
.bottom .focus{
  width: 275rpx;
  height: 100rpx;
  background-color: white;
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  font-size: 22px;
  color: #4dac96;
  line-height: 100rpx;
}
.bottom .message{
  width: 275rpx;
  height: 100%;
  background-color: #fff;
  position: absolute;
  right: 0rpx;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  font-size: 22px;
  color: #4dac96;
  line-height: 100rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}