/* pages/index/index.wxss */
.window{
  background-color: #eceee9;
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}
.window .user{
  background-color: #fff;
  width: 390rpx;
  height: 130rpx;
  border-radius: 65rpx;
  position:absolute;
  left: 40rpx;
  top:50rpx;
}
.user .head-img {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  display:block;
  overflow:hidden;
  margin: 10rpx ;
  position:absolute;
  left: 0rpx;
}
.user .rim{
  background-color: #4dac96;
  width: 130rpx;
  height: 130rpx;
  position:absolute;
  border-radius: 50%;
}
.user .username{
  font-size: 38rpx;
  position:absolute;
  left: 150rpx;
  height:130rpx;
  line-height: 130rpx;
  color: #4dac96;
}
.focus-game{
  /* border: 1rpx solid black; */
  width: 100%;
  height: 60%;
  position:absolute;
  top:230rpx;
  overflow: hidden;
  white-space: nowrap;
}
.focus-game .game{
  margin-left: 10rpx;
  margin-right: 10rpx;  
  height: 100%;
  width: 240rpx;
  display: inline-block;
}
